<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:background="@drawable/selector_widget_inventory_buy_bg"
        android:gravity="center">

        <Button
            android:layout_marginLeft="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:id="@+id/inventory_buy_sub_btn"
            android:padding="0dp"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_widget_inventory_buy"
            android:text="â€”"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/inventory_buy_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.1dp"
            android:layout_marginRight="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:cursorVisible="true"
            android:gravity="center"
            android:inputType="number"
            android:text="1" />

        <Button
            android:layout_marginRight="0.1dp"
            android:layout_marginTop="0.1dp"
            android:layout_marginBottom="0.1dp"
            android:id="@+id/inventory_buy_plus_btn"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:background="@drawable/selector_widget_inventory_buy_right"
            android:text="+"
            android:textSize="22sp" />

    </LinearLayout>

</FrameLayout>