<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liangge.indiana.fragments.LatestAnnouncementFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- Titlebar-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/titlebar_height"
            android:background="@color/titlebar_color">

            <TextView
                android:id="@+id/titlebar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_titlebar_title_lastest_anno"
                style="@style/titlebar_title"
                android:layout_centerInParent="true"/>


            <com.example.liangge.indiana.ui.widget.RotateImageView
                android:id="@+id/main_btn_refresh_loading"
                android:visibility="gone"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/comm_loading_view"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="9dp"/>

        </RelativeLayout>




    <!-- 没有网络时的加载情况 -->
    <include
        android:id="@+id/f_latest_not_network_wrapper"
        layout="@layout/layout_not_network" />

    <!-- 产品显示布局 -->

    <FrameLayout
        android:id="@+id/f_latest_content_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <in.srain.cube.views.ptr.PtrClassicFrameLayout
            android:id="@+id/rotate_header_web_view_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cube_mints_f1f1f1"
            app:ptr_duration_to_close="200"
            app:ptr_duration_to_close_header="1000"
            app:ptr_keep_header_when_refresh="true"
            app:ptr_pull_to_fresh="false"
            app:ptr_ratio_of_header_height_to_refresh="1.2"
            app:ptr_resistance="1.7">


            <com.example.liangge.indiana.ui.widget.ExScrollView
                android:id="@+id/f_latest_content_scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray"
                    android:orientation="vertical">

                    <com.example.liangge.indiana.ui.widget.ExGridView

                        android:id="@+id/f_latest_gridview_product_data"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/fragment_gridview_split"
                        android:cacheColorHint="@android:color/transparent"
                        android:fadingEdge="none"
                        android:focusable="false"
                        android:gravity="center"
                        android:horizontalSpacing="1dp"
                        android:numColumns="2"
                        android:verticalSpacing="1dp" />


                    <include
                        android:id="@+id/load_more_wrapper"
                        layout="@layout/layout_load_more_wrapper" />


                </LinearLayout>

            </com.example.liangge.indiana.ui.widget.ExScrollView>


        </in.srain.cube.views.ptr.PtrClassicFrameLayout>

    </FrameLayout>

    </LinearLayout>

</FrameLayout>
