                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:text="@string/f_shoppingcart_buycnt_hint"/>

            <TextView
                android:id="@+id/f_shopping_content_item_txvdesc2"
