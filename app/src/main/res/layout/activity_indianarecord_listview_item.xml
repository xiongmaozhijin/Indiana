<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:background="@drawable/selector_f_indiana_product_item_bg"
        android:paddingBottom="15dp"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

       <ImageView
           android:layout_marginRight="@dimen/bingo_indiana_item_padding"
           android:layout_gravity="right|top"
           android:layout_width="54dp"
           android:layout_height="54dp"
           android:src="@drawable/comm_loading_view"
           android:scaleType="fitXY"
           android:id="@+id/activity_indianarecord_product_img" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.liangge.indiana.ui.widget.TextViewFixTouchConsume
                android:lineSpacingMultiplier="@dimen/bingo_indiana_line_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/activity_indianarecord_userinfo_1"
                android:id="@+id/activity_indianarecord_userinfo_txv" />

        </FrameLayout>



         </LinearLayout>

    <ImageView
        android:id="@+id/ten_yuan_hint"
        android:visibility="invisible"
        android:layout_width="@dimen/ten_yuan_area_icon"
        android:layout_height="@dimen/ten_yuan_area_icon"
        android:src="@drawable/ten_area_icon"/>


</FrameLayout>