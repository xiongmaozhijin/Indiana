<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgview"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:adjustViewBounds="true"
                android:src="@drawable/comm_loading_view" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txv_desc1_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="描述..." />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/ProgressBar_Mini"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:max="1000" />

                <TextView
                    android:id="@+id/txv_desc2_cnt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="@string/activity_category_detail_cnt_des" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_addto_char"
                style="@style/Button.main.Border"
                android:layout_width="78dp"
                android:layout_height="32dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:text="加入清单"
                android:textColor="#F5C5CC" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ten_yuan_hint"
            android:visibility="invisible"
            android:layout_width="@dimen/ten_yuan_area_icon"
            android:layout_height="@dimen/ten_yuan_area_icon"
            android:src="@drawable/ten_area_icon"/>


    </FrameLayout>

</FrameLayout>