<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgview"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/comm_loading_view"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txv_desc1_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="描述..."/>

            <ProgressBar
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:max="1000"
                style="@style/ProgressBar_Mini"/>

            <TextView
                android:id="@+id/txv_desc2_cnt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/activity_category_detail_cnt_des"/>

        </LinearLayout>


        <Button
            android:id="@+id/btn_addto_char"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="#F5C5CC"
            android:background="@drawable/comm_btn_bg"
            android:layout_width="78dp"
            android:layout_height="32dp"
            android:text="加入清单"/>

    </LinearLayout>

</FrameLayout>