<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.liangge.indiana.ui.Inner.HistoryRunRecordActivity">

    <com.example.liangge.indiana.ui.widget.CommTitleBar
        xmlns:title="http://schemas.android.com/apk/res-auto"
        title:titlebar_title="@string/activity_history_titlebar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.example.liangge.indiana.ui.widget.CommTitleBar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/net_hint_wrapper"
            layout="@layout/layout_not_network" />

        <FrameLayout
            android:id="@+id/all_content_wrapper"
            android:background="@color/bg_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.example.liangge.indiana.ui.widget.ExScrollView
                android:id="@+id/scrollview"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:paddingTop="4dp"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <com.example.liangge.indiana.ui.widget.ExListView
                        android:id="@+id/listview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@color/white"
                        android:dividerHeight="3dp" />

                    <include
                        android:id="@+id/load_more_wrapper"
                        layout="@layout/layout_load_more_wrapper" />

                </LinearLayout>

            </com.example.liangge.indiana.ui.widget.ExScrollView>

        </FrameLayout>

    </FrameLayout>


</LinearLayout>
