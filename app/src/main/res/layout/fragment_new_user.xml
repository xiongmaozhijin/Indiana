        <RelativeLayout
            android:id="@+id/user_layout_13"
            android:layout_width="fill_parent"
            android:layout_height="20.0dip"
            android:layout_below="@+id/f_personal_txvbtn_bingo_record"
            android:background="@color/main_top_bg_active" />

        <RelativeLayout
            android:id="@+id/user_layout_setting"
            android:layout_width="fill_parent"
            android:layout_height="60.0dip"
            android:layout_below="@+id/user_layout_13">

            <ImageButton
                android:id="@+id/user_ic_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/personal_center_item_margin_left"
                android:background="@null"
                android:contentDescription="@string/desc_common_image"
                android:src="@drawable/ic_gear" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_toRightOf="@+id/user_ic_setting"
                android:text="设置"
                android:textSize="17.0sp" />

