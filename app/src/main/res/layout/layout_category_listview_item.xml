<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/list_selector_all_category_item"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/item_category_img"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="11dp"
            android:src="@drawable/comm_loading_view" />

        <TextView
            android:id="@+id/item_category_txv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11dp"
            android:background="@drawable/layer_category_txv_bg"
            android:text="十元夺宝"
            android:textColor="#8B8B8B" />
    </LinearLayout>

</FrameLayout>