<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- main radio button style-->
    <style name="main_radio_button_style">
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/selector_main_rb_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:background">@color/white</item>
        <!--使用下面的属性会导致BageView画不出来-->
        <!--<item name="android:singleLine">true</item>-->
    </style>

    <style name="titlebar_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>


    <!-- indiana category wrapper-->
    <style name="indiana_category_wrapper">
        <item name="android:layout_weight">1</item>
    </style>

    <!-- indiana category item -->
    <style name="indiana_category_item">
        <item name="android:background">@drawable/selector_float_menu_bg</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/selector_f_indiana_text_color</item>
        <item name="android:checkable">true</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>


    <!-- indiana record item -->
    <style name="indianarecord_category_item">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/selector_f_indiana_text_color</item>
        <item name="android:checkable">true</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/selector_indiana_record_item_bg</item>
    </style>

    <style name="latest_item_bingo_info">
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>


    <!-- 进度条样式 -->
    <style name="ProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
         <item name="android:progressDrawable">@drawable/progressbar_mini</item>
    </style>


    <!-- 网页进度条样式 -->
    <style name="WebViewProgressBar_Mini" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dip</item>
        <item name="android:minHeight">7dip</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:progressDrawable">@drawable/webview_progressbar_mini</item>
    </style>



    <style name="f_personal_txvbtn">
        <item name="android:layout_height">39dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:background">@drawable/selector_f_personal_txvbtn_bg</item>
        <item name="android:checkable">true</item>
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>


    <style name="Button">
        <item name="android:textSize">16.0sp</item>
        <item name="android:gravity">center</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">64.0dip</item>
        <item name="android:minHeight">40.0dip</item>
    </style>

    <style name="Button.main" parent="@style/Button">
        <item name="android:textColor">@drawable/btn_main_color</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="android:paddingLeft">17.0dip</item>
        <item name="android:paddingTop">6.0dip</item>
        <item name="android:paddingRight">17.0dip</item>
        <item name="android:paddingBottom">6.0dip</item>
        <item name="android:clickable">true</item>
        <item name="android:lineSpacingExtra">0.0sp</item>
    </style>


    <style name="personal_info_edit_bg">
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:background">@drawable/selector_edit_bg</item>
        <item name="android:textColor">@color/fragment_item_title</item>
        <item name="android:textSize">14sp</item>
    </style>



    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ShareOrdersImg">
   <!--     <item name="android:maxWidth">600dp</item>
        <item name="android:maxHeight">800dp</item>-->
        <item name="android:padding">0dip</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:scaleType">matrix</item>
        <item name="android:background">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>


    <style name="PersonalCenterItem">
        <item name="android:background">@drawable/selector_personal_item_bg</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>


    <style name="SettingItem">
        <item name="android:background">@drawable/selector_personal_item_bg</item>
    </style>


    <style name="DetailItem">
        <item name="android:background">@drawable/selector_detail_item_bg</item>
    </style>

</resources>
