<?xml version="1.0" encoding="utf-8"?>
<layer-list  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/activity_detail_btn_press" />
                    <corners android:radius="7dp" />
                </shape>
            </item>

            <item>
                <shape>
                    <solid android:color="@color/activity_detail_btn_normal" />
                    <corners android:radius="7dp" />
                </shape>

            </item>

        </selector>
    </item>

</layer-list>
